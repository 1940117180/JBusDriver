<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/material_8dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_movie_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bubble_chart_black_24dp"
        android:tint="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/iv_movie_genres"
        android:orientation="vertical"
        android:paddingLeft="@dimen/material_16dp"
        android:paddingStart="@dimen/material_16dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycle_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_movie_genres_none_tip"
            style="@style/AppTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="没有分类信息"
            android:textColor="@color/primaryText"
            android:visibility="gone" />

        <View style="@style/DividerLine.Horizontal" />
    </LinearLayout>


</RelativeLayout>